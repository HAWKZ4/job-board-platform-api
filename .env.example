#############################################
# üåç General Application Settings
#############################################

# Port the NestJS app will run on
# Developers can override for dev or production
PORT=3000

# Environment mode: development | production | test
NODE_ENV=development # Change to "production" in prod

#############################################
# üóÑÔ∏è Database Configuration (PostgreSQL)
#############################################

# Database host:
# - Use "localhost" for local development without Docker
# - Use Docker service name for containers (e.g., "job-board-db-dev")
DATABASE_HOST=localhost

# Default PostgreSQL port
DATABASE_PORT=5432

# Database credentials (use secure values in production)
DATABASE_USER=postgres
DATABASE_PASSWORD=changeme

# Database name
DATABASE_NAME=job_board_dev

#############################################
# üîë Authentication (JWT)
#############################################

# Secret for signing access tokens (use a strong random string in prod)
JWT_ACCESS_TOKEN_SECRET=changemeaccess

# Access token lifetime (milliseconds)
# e.g., 900000 = 15 minutes
JWT_ACCESS_TOKEN_EXPIRATION_MS=900000

# Secret for signing refresh tokens (different from access secret)
JWT_REFRESH_TOKEN_SECRET=changemerefresh

# Refresh token lifetime (milliseconds)
# e.g., 604800000 = 7 days
JWT_REFRESH_TOKEN_EXPIRATION_MS=604800000

#############################################
# üìÇ File Uploads
#############################################

# Directory inside the container where uploaded files are stored
# Make sure to mount a volume to persist files
RESUME_UPLOAD_PATH=/usr/src/app/uploads/resumes

#############################################
# ‚ö†Ô∏è Notes
#############################################
# 1. Copy this file to create your local .env file
# 2. Never commit your real secrets (JWT keys, DB passwords)
# 3. Override PORT or DATABASE_NAME for dev or production as needed
# 4. When using Docker, map volumes for uploads to persist files
# 5. Use NODE_ENV=production for the production image
