#############################################
# üåç General Application Settings
#############################################

# Port the NestJS app will run on
PORT=3000

# Environment mode: development | production | test
NODE_ENV=development


#############################################
# üóÑÔ∏è Database Configuration (PostgreSQL)
#############################################

# Database connection host (in Docker, service name is recommended, e.g., "job-board-db-dev")
DATABASE_HOST=localhost

# Default PostgreSQL port
DATABASE_PORT=5432

# Database username
DATABASE_USER=postgres

# Database password (‚ö†Ô∏è change in production)
DATABASE_PASSWORD=postgres

# Database name
DATABASE_NAME=job_board_db


#############################################
# üîë Authentication (JWT)
#############################################

# Secret for signing access tokens (use a strong random string in prod)
JWT_ACCESS_TOKEN_SECRET=changemeaccess

# Access token lifetime (milliseconds)
# e.g., 900000 = 15 minutes
JWT_ACCESS_TOKEN_EXPIRATION_MS=900000

# Secret for signing refresh tokens (different from access secret!)
JWT_REFRESH_TOKEN_SECRET=changemerefresh

# Refresh token lifetime (milliseconds)
# e.g., 604800000 = 7 days
JWT_REFRESH_TOKEN_EXPIRATION_MS=604800000


#############################################
# üìÇ File Uploads
#############################################

# Directory where resumes or uploaded files will be stored
# In Docker, map this to a volume
RESUME_UPLOAD_PATH=./uploads/resumes
